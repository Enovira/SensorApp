<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeActivityTextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WorkActivityTextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ConfigActivityTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ConfigActivityEdittextAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">end</item>
        <item name="android:enabled">true</item>
        <item name="android:imeOptions">flagNoExtractUi|actionDone</item>
    </style>

    <declare-styleable name="Battery">
        <attr name="batteryOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="batteryColor" format="color"/>
        <attr name="batteryPower" format="integer"/>
    </declare-styleable>

    <!-- Splash启动页Style -->
    <style name="Theme.SplashScreen.sensorApp" parent="Theme.SplashScreen">
        <!--启动画面背景颜色-->
        <item name="windowSplashScreenBackground">#eeeeee</item>
        <!-- 启动画面icon图标：这里可以是图片、帧动画等-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_img</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <!-- icon动画在关闭之前显示的时长：最长时间为1000毫秒-->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- 启动画面底部的 Brand 图片-->
        <!--        <item name="android:windowSplashScreenBrandingImage">@mipmap/icon_ejj</item>-->
        <!-- Splash退出后的主题-->
        <item name="postSplashScreenTheme">@style/Theme.SensorApp</item>
    </style>

</resources>